<div class="row">
  <div class="col-md-8">
    <h1>Listing Back Jobs</h1>
  </div>

  <div class="col-md-4 top-buffer">
    <%= link_to 'Home', start_index_path %>
  </div>
</div>

<div class="row">
  <div class="col-md-offset-10 col-md-4">
    <%= link_to 'New Back job', new_back_job_path %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped">
      <thead>
      <tr>
        <th>uri string</th>
        <th>JSON params</th>
        <th>retries</th>
        <th>exceptions</th>
        <th>response body</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @back_jobs.each do |back_job| %>
          <tr>
            <td><%= back_job.uri_str %></td>
            <td><%= back_job.json_params %></td>
            <td><%= back_job.retries %></td>
            <td><%= back_job.exceptions %></td>
            <td><%= back_job.response_body %></td>
            <td><%= link_to 'Show', back_job %></td>
            <td><%= link_to 'Edit', edit_back_job_path(back_job) %></td>
            <td><%= link_to 'Destroy', back_job, method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
