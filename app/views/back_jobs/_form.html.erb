<%= form_for(@back_job, html: {role: 'form'}) do |f| %>

    <div class="row">
      <div class="col-md-5">
        <div class="form-group">
          <%= f.label :uri_str %><br/>
          <%= f.text_field :uri_str, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :json_params %><br/>
          <%= f.text_area :json_params, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :retries %><br/>
          <%= f.text_field :retries, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :exceptions, 'Exceptions to retries (with capital letters, separated by commas)' %><br/>
          <%= f.text_field :exceptions, class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-offset-2 col-md-5">
        <%= f.submit('Save', class: 'btn btn-primary') %>
      </div>
    </div>

<% end %>
